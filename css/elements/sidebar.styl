/*----------------------*/ 
/*   SIDEBAR            */ 
/*----------------------*/

.sidebar
	padding 0 20px
	
@media (max-width: 768px)
	.sidebar
		padding 0
		margin-top 50px

.widget
	margin-bottom 50px
	width 100%
	clear both
	position relative
	&:last-child
		margin-bottom 0

.widget-title
	text-transform uppercase
	margin-bottom 20px
	font-size 14px
	letter-spacing 3px
	line-height 3em
	font-weight 600
	position relative
	&::after
		content ''
		position absolute
		left 0
		top 50%
		width 100%
		height 1px
		background-color $lgray
		z-index -1
	span
		background-color $white
		padding-right 10px


.widget ul
	margin 0 0 0 30px
	padding 0
	list-style-type none
	li
		position relative
		padding 6px 3px
		clear both
		&::before
			content '\f105'
			font-family 'FontAwesome'
			position absolute
			left -30px
			line-height 2em
		a, span
			line-height 1.8em
			font-size 14px
		span
			margin-left 20px
			position relative
			color $black
			text-transform uppercase
			&::before
				content "|"
				position relative
				top 0
				left -12px
	li:not(:last-child)
		border-bottom 1px solid lighten($lgray, 30%)

		
.tags a
	background-color transparent
	border 1px solid $gray
	font-size 11px
	letter-spacing 2px
	text-transform uppercase
	padding 4px 20px 4px 22px
	margin-bottom 7px
	font-weight 600
	margin-right 4px
	display inline-block
	color $text
	&:hover
		border-color $black
		color $black


.widget_recent_posts ul
	margin 0
	padding 0

.vl_recent_posts li
	&:not(:last-child)
		border-bottom none !important
	&::before
		content '' !important
	figure
		float left
		width 80px
		margin: 0 10px 0 0
		padding 0px
	.vl_recent_post_content
		a
			display block
			text-transform uppercase
			font-size 12px
			letter-spacing 2px
			font-weight 600
		span
			font-size 10px
			margin 0
			color $gray
			text-transform none
			&::before
				content ''

.search-wrap
	position relative
	input
		height 40px
		line-height 40px
		padding 0 45px 0 15px
		margin 0
		border 1px solid $lgray
	
.search-button
	background none
	border none
	outline none
	height 40px
	width 40px
	font-size 14px
	line-height 40px
	position absolute
	top 0
	right 0
	color $gray
	transition $transition
	&:hover
		color $black